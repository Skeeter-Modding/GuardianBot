<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Guardian Bot</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.socket.io/4.7.4/socket.io.min.js"></script>
    <style>
        body { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 100vh; }
        .navbar-brand { font-weight: bold; }
        .card { backdrop-filter: blur(10px); background: rgba(255, 255, 255, 0.95); border: none; box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1); }
        .stat-card { transition: transform 0.3s; }
        .stat-card:hover { transform: translateY(-5px); }
        .log-item { border-left: 4px solid #007bff; }
        .log-item.warning { border-left-color: #ffc107; }
        .log-item.danger { border-left-color: #dc3545; }
        .log-item.success { border-left-color: #28a745; }
        .ticket-high { border-left: 4px solid #dc3545; }
        .ticket-medium { border-left: 4px solid #ffc107; }
        .ticket-low { border-left: 4px solid #28a745; }
        .sidebar { background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px); }
        .nav-link { color: white !important; }
        .nav-link:hover { background: rgba(255, 255, 255, 0.2); border-radius: 8px; }
        .nav-link.active { background: rgba(255, 255, 255, 0.3); border-radius: 8px; }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="fas fa-shield-alt"></i> Guardian Bot Dashboard
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/"><i class="fas fa-home"></i> Home</a>
                    </li>
                    <% if (user && typeof user === 'object') { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/tickets"><i class="fas fa-ticket-alt"></i> Tickets</a>
                        </li>
                        <% if (typeof user.id === 'string' && ['701257205445558293'].includes(user.id)) { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin"><i class="fas fa-cog"></i> Admin</a>
                            </li>
                        <% } %>
                    <% } %>
                </ul>
                <ul class="navbar-nav">
                    <% if (user && typeof user === 'object') { %>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                <% if (user.avatar) { %>
                                    <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="Avatar" width="24" height="24" class="rounded-circle me-2">
                                <% } %>
                                <%= user.username || 'User' %>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                            </ul>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/auth/discord"><i class="fab fa-discord"></i> Login with Discord</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Content -->
    <div class="container-fluid mt-4">
        <%- body %>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // WebSocket connection for real-time updates
        const socket = io();
        
        <% if (user && typeof user === 'object') { %>
            // Join appropriate rooms based on user permissions
            <% if (typeof user.id === 'string' && ['701257205445558293'].includes(user.id)) { %>
                socket.emit('joinAdmin', '<%= user.id %>');
            <% } %>
            socket.emit('joinStaff', '<%= user.id %>');
        <% } %>

        // Handle real-time updates
        socket.on('newLog', function(logData) {
            // Update admin logs if on admin page
            if (window.location.pathname === '/admin') {
                updateLogsList(logData);
            }
        });

        socket.on('ticketUpdate', function(updateData) {
            // Update ticket lists if on ticket page
            if (window.location.pathname === '/tickets') {
                updateTicketsList(updateData);
            }
        });

        // Auto-refresh data every 30 seconds
        setInterval(() => {
            if (window.location.pathname === '/admin') {
                refreshAdminData();
            } else if (window.location.pathname === '/tickets') {
                refreshTicketData();
            }
        }, 30000);
    </script>
</body>
</html>