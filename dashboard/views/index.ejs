<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body text-center">
                <i class="fas fa-shield-alt fa-5x text-primary mb-4"></i>
                <h1 class="display-4">Guardian Bot Dashboard</h1>
                <p class="lead">Advanced Discord bot protection and management system</p>
                
                <% if (!user) { %>
                    <div class="mt-4">
                        <a href="/auth/discord" class="btn btn-primary btn-lg">
                            <i class="fab fa-discord"></i> Login with Discord
                        </a>
                    </div>
                <% } else { %>
                    <div class="row mt-5">
                        <div class="col-md-6">
                            <div class="card bg-primary text-white">
                                <div class="card-body">
                                    <h5><i class="fas fa-ticket-alt"></i> Staff Dashboard</h5>
                                    <p>Manage tickets and support requests</p>
                                    <a href="/tickets" class="btn btn-light">Access Tickets</a>
                                </div>
                            </div>
                        </div>
                        <% if (user.id === '701257205445558293') { %>
                            <div class="col-md-6">
                                <div class="card bg-danger text-white">
                                    <div class="card-body">
                                        <h5><i class="fas fa-cog"></i> Admin Dashboard</h5>
                                        <p>View logs and system administration</p>
                                        <a href="/admin" class="btn btn-light">Access Admin</a>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>